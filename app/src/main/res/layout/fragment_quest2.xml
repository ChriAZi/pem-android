<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.questionnaire.Quest1Fragment"
    android:id="@+id/fragmentQuest2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="40px"
        android:padding="50px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/hlFrag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="20dp"
            android:layout_margin="10px"
            android:textColor="@color/darkGrey"
            />

        <TextView
            android:id="@+id/tvQuest2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:text="What categories are you working for?"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_margin="10px"
            android:textColor="@color/darkGrey"
            />

        <!--EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editQuest2"
            android:hint="Enter matching categories"
            android:layout_margin="20px"
            /-->

        <ImageView
            android:id="@+id/iv_sign_in_background_image"
            android:layout_width="357dp"
            android:layout_height="376dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/right_direction"
            android:layout_gravity="center"
            />

        <AutoCompleteTextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/autoEditQuest2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter matching categories"
            android:layout_margin="20px"
            android:textColor="@color/darkGrey"
            />

        <TextView
            android:id="@+id/tvAnsw2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:text=""
            android:textSize="25dp"
            android:textStyle="normal"
            android:layout_margin="20px" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>