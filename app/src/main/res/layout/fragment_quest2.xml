<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.questionnaire.Quest1Fragment"
    android:id="@+id/fragmentQuest2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="80px"
        android:padding="50px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#516c8d">

        <TextView
            android:id="@+id/hlFrag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="20dp"
            android:layout_margin="20px"
            android:textColor="#FFFFFF"
            />

        <TextView
            android:id="@+id/tvQuest2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:text="What categories are you working for?"
            android:textSize="25dp"
            android:textStyle="normal"
            android:layout_margin="20px"
            android:textColor="#FFFFFF"
            />

        <!--EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editQuest2"
            android:hint="Enter matching categories"
            android:layout_margin="20px"
            /-->

        <AutoCompleteTextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/autoEditQuest2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter matching categories"
            android:textColorHint="#FFFFFF"
            android:layout_margin="20px"
            android:textColor="#FFFFFF"
            />

        <TextView
            android:id="@+id/tvAnsw2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:text=""
            android:textSize="25dp"
            android:textStyle="normal"
            android:layout_margin="20px" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>