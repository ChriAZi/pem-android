<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.questionnaire.Quest1Fragment"
    android:id="@+id/fragmentQuest3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="80px"
        android:padding="50px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#516c8d"

        >

        <TextView
            android:id="@+id/hlFrag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="20dp"
            android:layout_margin="20px"
            android:textColor="#FFFFFF"

            />

        <TextView
            android:id="@+id/tvQuest3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:text="Add some subtasks?"
            android:textSize="25dp"
            android:textStyle="normal"
            android:layout_margin="20px"
            android:textColor="#FFFFFF"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editQuest3"
            android:hint="Enter a subtask"
            android:layout_margin="20px"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            />

        <Button
            android:id="@+id/btnSubmit3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Add ToDo" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toDoList"
            android:textColor="#FFFFFF"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>