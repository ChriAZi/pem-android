<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.questionnaire.Quest1Fragment"
    android:id="@+id/fragmentQuest3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10px"
        android:padding="10px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/hlFrag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Third Question"
            android:textSize="30dp"
            android:layout_margin="20px"
            />

        <TextView
            android:id="@+id/tvQuest3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:text="Add some subtasks?"
            android:textSize="25dp"
            android:textStyle="normal"
            android:layout_margin="20px"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editQuest3"
            android:hint="Enter a subtask"
            android:layout_margin="20px"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>