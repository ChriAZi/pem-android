<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.questionnaire.Quest1Fragment"
    android:id="@+id/fragmentRQuestDistractions">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="40px"
        android:padding="50px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/hlFrag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="20dp"
            android:layout_margin="10px"
            android:textColor="@color/darkGrey"

            />

        <TextView
            android:id="@+id/tvQuest3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:text="Did you get distracted?"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_margin="10px"
            android:textColor="@color/darkGrey"
            />

        <ImageView
            android:id="@+id/iv_distractions"
            android:layout_width="357dp"
            android:layout_height="376dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/starry_window"
            android:layout_gravity="center"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reditQuestDistractions"
            android:hint="Enter your distractions"
            android:layout_margin="10px"
            android:textColor="@color/darkGrey"
            />

        <Button
            android:id="@+id/btnSubmitDist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Add Distraction" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/distList"
            android:textColor="@color/darkGrey"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>